
@model BrandType
<link rel="stylesheet" href="~/css/Create.css" asp-append-version="true" />

<h2>Додати нову марку</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Назва марки</label>
        <input asp-for="BrandName" class="form-control" />
        <span asp-validation-for="BrandName" class="text-danger"></span>
    </div>
    <div>
        <label>Країна</label>
        <input asp-for="Country" class="form-control" />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>
    <div>
        <label>Тип велосипеду</label>
        <select asp-for="BicycleTypeID" asp-items="ViewBag.BicycleType" class="form-control" required>
            <option value="">-- Оберіть тип --</option>
        </select>
        <span asp-validation-for="BicycleTypeID" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Зберегти</button>
</form>
<a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Назад</a>
